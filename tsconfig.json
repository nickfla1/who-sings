{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "ES2019"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "ES2019",
    "baseUrl": ".",
    "paths": {
      "@core/*": [
        "src/core/*"
      ],
      "@screens/*": [
        "src/screens/*"
      ],
      "@util/*": [
        "src/util/*"
      ],
      "@ui": [
        "src/ui/index"
      ],
      "@ui/*": [
        "src/ui/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@navigation/*": [
        "src/navigation/*"
      ]
    },
    "types": [
      "jest"
    ]
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
